class Employee:

    def __init__(self, first, last):
        self.first = first
        self.last = last

    @property
    def email(self):
        return '{}.{}@email.com'.format(self.first, self.last)

    @property
    def fullname(self):
        return '{} {}'.format(self.first, self.last)
    
   @fullname.setter
   def fullname(self, name):
    try:
        first, last = name.split(' ')
        self.first = first
        self.last = last
    except ValueError:
        # Замість виведення повідомлення можна обробити помилку або просто пропустити дію.
        pass

   @fullname.deleter
   def fullname(self):
   # Видалення атрибутів без додаткових повідомлень.
   del self.first
   del self.last


emp_1 = Employee('John', 'Smith')
emp_1.fullname = "Corey Schafer"

print(emp_1.first)
print(emp_1.email)
print(emp_1.fullname)

del emp_1.fullname
